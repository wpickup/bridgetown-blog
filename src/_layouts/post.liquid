---
layout: default
---

 <div class="container mx-auto px-4 py-6">
   <article class="g-white rounded-lg shadow p-6">
    <h2 class="text-xl font-bold text-gray-800">
     {{ resource.data.title }}
    </h2>
    <h3 class="text-gray-800">
     {% assign subtitle = resource.data.subtitle %}
     {% if subtitle %}
       {{ subtitle | capitalize }}
     {% endif %}
    </h3>
    <p class="text-gray-600">Published on <time datetime="{{ resource.date }}">{{ resource.date | date: "%B %e, %Y" }}</time></p>
    <p class="text-gray-800 mt-6">
     {{ content }}
    </p>
   </article>
 </div>

 <post-footer>
   {% if resource.previous_resource %}
     <a href="{{ resource.previous_resource.relative_url }}#bottom">
       <strong>Next:</strong> {{ resource.previous_resource.data.title }}
     </a>
   {% endif %}
   {% if resource.next_resource %}
     <a href="{{ resource.next_resource.relative_url }}#bottom">
       <strong>Previous:</strong> {{ resource.next_resource.data.title }}
     </a>
   {% endif %}
